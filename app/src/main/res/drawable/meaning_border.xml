<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF" />

    <!-- Bo góc cho 4 góc của LinearLayout -->
    <corners android:radius="10dp" />

    <!-- Định nghĩa đường viền (border) -->
    <stroke
        android:width="4dp"
        android:color="@color/primary" /> <!-- Màu đường viền -->

    <!-- Độ dày của padding bên trong -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>