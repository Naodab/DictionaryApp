<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/rounded_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền của LinearLayout -->
    <solid android:color="#FFFFFF" />

    <!-- Bo góc cho 4 góc của LinearLayout -->
    <corners android:radius="32dp" />

    <!-- Định nghĩa đường viền (border) -->
    <stroke
        android:width="2dp"
        android:color="@color/primary" /> <!-- Màu đường viền -->

    <!-- Độ dày của padding bên trong -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
