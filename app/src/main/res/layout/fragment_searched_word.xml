<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginStart="0dp"
        android:background="@drawable/rectangle_1171_shape" />

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="19dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="15dp"
        android:contentDescription="vector"
        android:src="@drawable/vectorback" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="26dp"
        android:fontFamily="@font/agbalumo"
        android:gravity="center"
        android:text="@string/t_____tra_string"
        android:textColor="@color/luy_n_t_p_color"
        android:textSize="35sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="95dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/recyclev_view_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="580dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_searched_word"
                android:layout_width="match_parent"
                android:layout_height="580dp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp">
        <TextView
            android:id="@+id/relearn"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/rectangle_1202_shape"
            android:gravity="center"
            android:text="@string/_n_t_p_string"
            android:textColor="@color/_bg__search_word_ek2_color"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/writing_practice"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/rectangle_1202_shape"
            android:text="@string/t_p_vi_t_string"
            android:textColor="@color/_bg__search_word_ek2_color"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/practice"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="6dp"
            android:gravity="center"
            android:background="@drawable/rectangle_1202_shape"
            android:text="@string/luy_n_t_p_string"
            android:textColor="@color/_bg__search_word_ek2_color"
            android:textSize="18sp"
            android:textStyle="italic" />
    </LinearLayout>
</RelativeLayout>