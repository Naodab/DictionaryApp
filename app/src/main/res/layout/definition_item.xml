<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="definition"
            type="com.midterm.testdictionary.model.Definition" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Defination:"
            android:fontFamily="@font/abeezee"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/__asdasd__color"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{definition.definition}"
            android:fontFamily="@font/abeezee"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/title_thame_color"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lb_example"
            android:text="Example:"
            android:fontFamily="@font/abeezee"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/__asdasd__color"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_example"
            android:layout_marginTop="8dp"
            android:text="@{definition.example}"
            android:fontFamily="@font/abeezee"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/title_thame_color"/>
    </LinearLayout>
</layout>