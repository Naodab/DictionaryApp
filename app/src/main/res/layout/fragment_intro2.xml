<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_bg__introduce2_ek2_shape">

    <View
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="469dp"
        android:background="@drawable/rectangle_1177_shape" />

    <View
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="469dp"
        android:background="@drawable/rectangle_1176_shape" />

    <View
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="469dp"
        android:background="@drawable/rectangle_1178_shape" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="72dp"
        android:src="@drawable/intro_2"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:background="@drawable/rectangle_1197_shape"/>

    <TextView
        android:layout_width="360dp"
        android:layout_height="117dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="517dp"
        android:text="@string/instant_translations_at_your_fingertips_string"
        android:textColor="@color/instant_translations_at_your_fingertips_color"
        android:textSize="36sp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="370.5dp"
        android:layout_height="103.5dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="622dp"
        android:justificationMode="inter_word"
        android:text="@string/quickly_translate_words_between_languages_with_our_integrated_translation_feature__get_definitions_and_examples_on_the_go__string"
        android:textColor="@color/white"
        android:textSize="17sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="21dp"
        android:layout_marginTop="750dp">
        <View
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:focusable="true"
            android:layout_marginRight="4dp"
            android:clickable="true"
            android:background="@drawable/rectangle_1204_shape" />

        <View
            android:id="@+id/skip"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:focusable="true"
            android:layout_marginHorizontal="4dp"
            android:clickable="true"
            android:background="@drawable/rectangle_1204_shape" />

        <View
            android:id="@+id/next"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:focusable="true"
            android:clickable="true"
            android:layout_marginLeft="4dp"
            android:background="@drawable/rectangle_1202_shape" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="21dp"
        android:layout_marginTop="750dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Back"
            android:textColor="@color/skip_color"
            android:layout_marginRight="4dp"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/skip_string"
            android:textColor="@color/skip_color"
            android:layout_marginHorizontal="4dp"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/next_string"
            android:textColor="@color/skip_color"
            android:layout_marginLeft="4dp"
            android:textSize="18sp"
            android:textStyle="italic" />
    </LinearLayout>

</RelativeLayout>